{
  "name": "rerover",
  "env": "docker",
  "region": "oregon",
  "buildCommand": "cd ReRover && mvn clean package -DskipTests",
  "dockerfile": "./Dockerfile",
  "envVars": [
    {
      "key": "SPRING_PROFILES_ACTIVE",
      "value": "production"
    },
    {
      "key": "DB_HOST",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "hostname"
      }
    },
    {
      "key": "DB_PORT",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "port"
      }
    },
    {
      "key": "DB_NAME",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "database"
      }
    },
    {
      "key": "DB_USERNAME",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "user"
      }
    },
    {
      "key": "DB_PASSWORD",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "password"
      }
    },
    {
      "key": "PORT",
      "value": "8080"
    },
    {
      "key": "SPRING_DATASOURCE_HIKARI_CONNECTION_TIMEOUT",
      "value": "30000"
    },
    {
      "key": "SPRING_DATASOURCE_HIKARI_MAXIMUM_POOL_SIZE",
      "value": "5"
    },
    {
      "key": "SPRING_DATASOURCE_HIKARI_MINIMUM_IDLE",
      "value": "2"
    },
    {
      "key": "SPRING_DATASOURCE_HIKARI_IDLE_TIMEOUT",
      "value": "30000"
    },
    {
      "key": "SPRING_DATASOURCE_HIKARI_MAX_LIFETIME",
      "value": "1800000"
    }
  ],
  "healthCheckPath": "/actuator/health",
  "autoDeploy": true,
  "plan": "free"
}
