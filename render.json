{
  "name": "rerover",
  "env": "docker",
  "region": "oregon",
  "buildCommand": "cd ReRover && mvn clean package -DskipTests",
  "dockerfile": "./Dockerfile",
  "envVars": [
    {
      "key": "SPRING_PROFILES_ACTIVE",
      "value": "production"
    },
    {
      "key": "DB_HOST",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "hostname"
      }
    },
    {
      "key": "DB_PORT",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "port"
      }
    },
    {
      "key": "DB_NAME",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "database"
      }
    },
    {
      "key": "DB_USERNAME",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "user"
      }
    },
    {
      "key": "DB_PASSWORD",
      "fromDatabase": {
        "name": "rerover-db",
        "property": "password"
      }
    },
    {
      "key": "PORT",
      "value": "8080"
    }
  ],
  "plan": "free",
  "numInstances": 1
}